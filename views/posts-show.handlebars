<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <a href="/profile/{{post.author._id}}" class="lead">{{post.author.name}}</a>
    <li class="list-group-item">
      <h3>{{post.status}}</h3>
      {{#if post.url}}
        <img src="{{post.url}} width="200" height="300">
      {{/if}}
      <p>Likes Count: {{post.likedUsers.length}}</p>
      </li>
    
  </div>
</div>  
{{#if currentUser}}
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/posts/{{post._id}}/comments" method="post">
      <textarea class='form-control' name="content" placeholder="Comment"></textarea>
      <div class="text-right">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
{{/if}}

  <h4>Comments</h4>
  {{#each post.comments}}
      <li class="list-group-item">
        <div class="lead"><a href="/profile/{{this.author._id}}" class="lead">{{this.author.name}}</a>
        <p>{{this.content}}</p>
      </li>
  {{/each}}
</div>